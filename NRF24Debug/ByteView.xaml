<UserControl x:Class="NRF24Debug.ByteView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Height="20">
    <Border CornerRadius="3" BorderThickness="1" BorderBrush="Black" Height="20" Margin="0,0,2,0">
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="0x" x:Name="textBlockHex" Margin="1, 0, -1, 0"/>
            <TextBox BorderThickness="0" Background="Transparent" HorizontalContentAlignment="Left" x:Name="textBoxValue" Text="FF" TextChanged="textBoxValue_TextChanged" GotFocus="textBoxValue_GotFocus"/>
        </StackPanel>
    </Border>
</UserControl>